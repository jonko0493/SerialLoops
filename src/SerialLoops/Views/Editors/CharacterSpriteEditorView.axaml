<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SerialLoops.ViewModels.Editors"
             xmlns:assets="using:SerialLoops.Assets"
             xmlns:controls="using:SerialLoops.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:CharacterSpriteEditorViewModel"
             x:Class="SerialLoops.Views.Editors.CharacterSpriteEditorView">
    <StackPanel Spacing="10" Orientation="Vertical">
        <Panel IsVisible="False">
            <Button Command="{Binding UndoCommand}" HotKey="{Binding UndoGesture}"/>
            <Button Command="{Binding RedoCommand}" HotKey="{Binding RedoGesture}"/>
        </Panel>

        <controls:AnimatedImage DataContext="{Binding AnimatedImage}" />
        <StackPanel Orientation="Horizontal" Spacing="5">
            <StackPanel Orientation="Horizontal" Spacing="3" VerticalAlignment="Center">
                <TextBlock Text="{x:Static assets:Strings.EditorCharacterLabel}"/>
                <ComboBox ItemsSource="{Binding Characters}" SelectedItem="{Binding Character}"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding IsLarge}" Content="{x:Static assets:Strings.CharacterSpriteEditorIsLargeLabel}"/>
        </StackPanel>
        <Button Command="{Binding ReplaceCommand}" Content="{x:Static assets:Strings.CharacterSpriteEditorReplaceSprite}"/>
        <StackPanel Orientation="Horizontal" Spacing="3">
            <Button Name="ExportFramesButton" Command="{Binding ExportFramesCommand}" Content="{x:Static assets:Strings.AnimationExportFramesButton}"/>
            <Button Name="ExportGIFButton" Command="{Binding ExportGIFCommand}" Content="{x:Static assets:Strings.AnimationExportGifButton}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
