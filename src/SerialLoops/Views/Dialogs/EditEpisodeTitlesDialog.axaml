<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:SerialLoops.ViewModels.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:assets="using:SerialLoops.Assets"
        xmlns:utility="using:SerialLoops.Utility"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        SizeToContent="WidthAndHeight"
        x:DataType="vm:EditEpisodeTitlesDialogViewModel"
        x:Class="SerialLoops.Views.Dialogs.EditEpisodeTitlesDialog"
        Title="{x:Static assets:Strings.EditEpisodeTitlesDialogTitle}">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*" Margin="20">
        <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" ItemsSource="{Binding Episodes}"
                 SelectedItem="{Binding SelectedEpisode}"/>

        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,Auto">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Episode Title"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" Text="{Binding SelectedEpisode.Title}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Episode Ticker Tape Description"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="10,0,0,0" Text="{Binding SelectedEpisode.TickerTape}"/>
        </Grid>

        <Image Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="{Binding SelectedEpisode.HeaderGraphic.Width}"
               Source="{Binding SelectedEpisode.HeaderGraphic, Converter={x:Static utility:SLConverters.SKBitmapToAvaloniaConverter}}"/>
    </Grid>
</Window>

